{
  "name": "@amazeeio/amazee-io-cli",
  "version": "0.1.0",
  "description": "AmazeeIO Commandline Tool",
  "main": "./dist/cli.js",
  "bin": {
    "io": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublish": "in-publish && yarn run dist || not-in-publish",
    "preversion": "yarn test",
    "version": "yarn run dist",
    "postversion": "git push && git push --tags",
    "update-schema": "node scripts/updateSchema.js",
    "clean": "rimraf dist",
    "dist": "yarn run clean && yarn run build",
    "lint": "eslint src",
    "format": "prettier --trailing-comma all --single-quote --write 'src/**/*.js' && yarn run lint -- --fix",
    "test": "yarn run lint && jest",
    "test:watch": "jest --watch",
    "build": "babel src -d dist",
    "watch": "babel --watch=src -d dist",
    "execute": "node -r babel-core/register src/cli.js",
    "lint-staged": "lint-staged",
    "flow": "flow check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amazeeio/lagoon.git"
  },
  "author": "Patrick Stapfer <patrick@amazee.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amazeeio/lagoon/issues"
  },
  "homepage": "https://github.com/amazeeio/lagoon#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-regenerator": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-graphql": "^1.2.0",
    "eslint-plugin-import": "^2.7.0",
    "flow-bin": "^0.51.0",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.2",
    "node-fetch": "^1.7.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "chalk": "^1.1.3",
    "co": "^4.6.0",
    "graphql": "^0.10.5",
    "in-publish": "^2.0.0",
    "inquirer": "^3.2.1",
    "js-yaml": "^3.9.0",
    "ramda": "^0.22.1",
    "ssh2": "^0.5.5",
    "ssh2-streams": "^0.1.19",
    "table": "^4.0.1",
    "untildify": "^3.0.2",
    "util.promisify": "^1.0.0",
    "yargs": "^8.0.2"
  },
  "jest": {
    "rootDir": "src"
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma all --single-quote",
      "eslint --fix",
      "git add"
    ]
  },
  "pre-commit": [
    "flow",
    "lint-staged"
  ]
}
