{
  "private": true,
  "scripts": {
    "clean": "rimraf dist && rimraf logs && rimraf .repository",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:container": "docker-compose exec api sh -c 'yarn run test:watch'",
    "build": "babel src -d dist",
    "dev": "NODE_ENV=development nodemon --watch src --exec 'node -r dotenv-extended/config -r babel-core/register' -- src",
    "start": "node -r dotenv-extended/config dist",
    "flow": "flow check",
    "format": "prettier --trailing-comma all --single-quote --write 'src/**/*.js' && yarn run lint -- --fix"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.13.2",
    "babel-eslint": "7.x.x",
    "babel-jest": "^20.0.3",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-regenerator": "^6.11.4",
    "babel-preset-es2015": "^6.13.2",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-flow-vars": "^0.5.0",
    "eslint-plugin-flowtype": "^2.25.0",
    "eslint-plugin-graphql": "^1.0.0",
    "eslint-plugin-import": "^2.6.0",
    "flow-bin": "^0.48.0",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.4.4",
    "remote-redux-devtools": "^0.5.12",
    "rimraf": "^2.5.4"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "body-parser": "^1.15.0",
    "compression": "^1.6.1",
    "cors": "^2.7.1",
    "dotenv": "^4.0.0",
    "dotenv-extended": "^2.0.1",
    "dotenv-safe": "^4.0.3",
    "express": "^4.13.4",
    "express-graphql": "^0.6.6",
    "glob": "^7.1.2",
    "graphql": "^0.10.3",
    "graphql-tools": "^1.0.0",
    "graphql-type-json": "^0.1.4",
    "js-yaml": "^3.6.1",
    "morgan": "^1.7.0",
    "nodegit": "^0.16.0",
    "normalizr": "^3.2.3",
    "ramda": "^0.24.1",
    "redux": "^3.7.1",
    "redux-saga": "^0.15.4",
    "winston": "^2.3.0"
  },
  "jest": {
    "rootDir": ".",
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)(spec|test).js?(x)"
    ],
    "setupFiles": [
      "./jest/setup.js"
    ],
    "moduleNameMapper": {
      "^nodegit$": "<rootDir>/jest/nodegit.js"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --trailing-comma all --single-quote",
        "eslint --fix",
        "git add"
      ]
    },
    "gitDir": "../../"
  }
}
