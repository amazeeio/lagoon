{
  "private": true,
  "scripts": {
    "clean": "rimraf dist && rimraf logs && rimraf .repository",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:container": "docker-compose exec api sh -c 'yarn run test:watch'",
    "build": "flow-remove-types --out-dir dist/ src/",
    "dev": "NODE_ENV=development nodemon --watch src --exec 'node -r dotenv-extended/config -r flow-remove-types/register' -- src",
    "start": "node -r dotenv-extended/config dist",
    "flow": "flow check",
    "format": "prettier --trailing-comma es5 --single-quote --write 'src/**/*.js' && yarn run lint -- --fix"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-graphql": "^1.0.0",
    "eslint-plugin-import": "^2.6.0",
    "flow-bin": "^0.48.0",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.5.3",
    "remote-redux-devtools": "^0.5.12",
    "rimraf": "^2.5.4"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "body-parser": "^1.15.0",
    "compression": "^1.6.1",
    "cors": "^2.7.1",
    "dotenv": "^4.0.0",
    "dotenv-extended": "^2.0.1",
    "dotenv-safe": "^4.0.3",
    "express": "^4.13.4",
    "express-graphql": "^0.6.6",
    "flow-remove-types": "^1.2.1",
    "glob": "^7.1.2",
    "graphql": "^0.10.3",
    "graphql-tools": "^1.0.0",
    "graphql-type-json": "^0.1.4",
    "js-yaml": "^3.6.1",
    "morgan": "^1.7.0",
    "nodegit": "^0.16.0",
    "normalizr": "^3.2.3",
    "ramda": "^0.24.1",
    "redux": "^3.7.1",
    "redux-saga": "^0.15.4",
    "winston": "^2.3.0"
  },
  "jest": {
    "rootDir": ".",
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)(spec|test).js?(x)"
    ],
    "transform": {
      "\\.js$": "<rootDir>/jest/flow-transform.js"
    },
    "setupFiles": [
      "<rootDir>/jest/setup.js"
    ],
    "moduleNameMapper": {
      "^nodegit$": "<rootDir>/jest/nodegit.js"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --trailing-comma all --single-quote",
        "eslint --fix",
        "git add"
      ]
    },
    "gitDir": "../../"
  }
}
